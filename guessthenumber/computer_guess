import random
#user comes up with secret number and computer guess it

def computer_guess(secretNumber, x=1, y=10):
    options = []
    for n in range(x,y):
       options.append(n) 
    tries = 0
    guess = 0
    while guess != secretNumber:
        tries+=1
        guess = random.choice(options)
        options.remove(guess)       
        if guess > secretNumber:
            for m in options:
                if m > guess:
                    options.remove(m)
        elif guess < secretNumber:
            for m in options:
                if m < guess:
                    options.remove(m)
    if tries == 1:
        print("The computer guessed your number " +str(secretNumber) +" after "+ str(tries) + " try")
    else:
        print("The computer guessed your number " +str(secretNumber) +" after "+ str(tries) + " tries")
        
computer_guess(13,1,20)

def computer_guess_example_refined_by_me(x, number):
    low = 1
    high = x
    guess = 0
    while guess != number and low != high:
        guess = random.randint(low,high)
        if guess > number:
            high = guess-1
        elif guess < number:
            low = guess + 1
    print(f"The computer guessed your number, {guess}, correctly!")

computer_guess_example_refined_by_me(20, 5)


def computer_guess_example(x):
    low = 1
    high = x
    feedback = ""
    while feedback != "c":
        if low != high:
            guess = random.randint(low,high)
        else:
            guess = high
        feedback = input(f"Is {guess} too high (H), too low (L), or correct (C): ").lower()
        if feedback == "h":
            high = guess-1
        elif feedback == "l":
            low = guess + 1
    print(f"The computer guessed your number, {guess}, correctly!")

computer_guess_example(20)


            
            
